<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>
<main>
  <h1>New Flight</h1>
  <form 
    id="new-form" 
    action="/flights" 
    method="POST"
  >
    <!-- Airline -->
    <label for="airline-input">Airline: </label>
    <select name="airline" id="airline-select">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <!-- Airpirt -->
    <label for="airport-input">Airport: </label>
    <select name="airport" id="airport-select">
      <option value="AUS">Austin-Bergstrom International</option>
      <option value="DFW">Dallas/Fort Worth International</option>
      <option value="DEN">Denver International</option>
      <option value="LAX">Los Angeles International</option>
      <option value="SAN">San Diego International </option>
    </select>
    <!-- Flight number -->
    <label for="flightNo-input">Flight No:</label>
    <input 
      type="text" 
      name="flightNo" 
      id="flightNo-input">
    <!-- Departs -->
    <label for="departs-input">Departs:</label>
    <input 
      type="date" 
      name="departs" 
      value = "<%= new Date()%>" 
      id="departs-input">
    
    <button type="submit">Add Flight</button>
    
  </form>
</main>

<%- include('../partials/footer')  %>